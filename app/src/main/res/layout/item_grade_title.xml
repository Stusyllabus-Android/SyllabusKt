<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/semesterTitleContainer"
    android:background="@drawable/bg_grade_semester"
    android:paddingVertical="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/semesterTV"
        android:text="2019-2020学年秋季学期"
        android:textSize="16sp"
        android:textColor="@color/material_textBlack_black"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/numOfLessons"
        android:layout_toRightOf="@+id/semesterTV"
        android:text="7门课程"
        android:textSize="16sp"
        android:textColor="@color/material_grey_800"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/expandIcon"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>