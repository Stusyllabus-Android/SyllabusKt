<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lessonNameLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程名："
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/lessonNameTV"
            android:text="@string/lesson_name"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/material_textBlack_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/classroomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/lessonNameLayout"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/lessonNameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="地点："
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/classroomTV"
            android:textSize="16sp"
            android:textColor="@color/material_textBlack_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lessonTimeTV"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/lessonNameLayout"
        android:text="@string/time_"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp" />

    <ImageView
        android:id="@+id/deleteLessonIcon"
        android:src="@drawable/icon_delete_lesson"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/classroomLayout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="20dp"
        android:background="@color/defaultShowColor"/>

</RelativeLayout>